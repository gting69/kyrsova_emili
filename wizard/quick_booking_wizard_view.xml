<odoo>
    <record id="action_quick_booking_wizard" model="ir.actions.act_window">
        <field name="name">Quick Booking</field>
        <field name="res_model">quick.booking.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_quick_booking_wizard_form" model="ir.ui.view">
        <field name="name">quick.booking.wizard.form</field>
        <field name="model">quick.booking.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="room_id"/>
                        <field name="start_date"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_create_booking" string="Create" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
