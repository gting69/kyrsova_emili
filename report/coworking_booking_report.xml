<odoo>
    <record id="action_report_coworking_booking" model="ir.actions.report">
        <field name="name">Booking Summary</field>
        <field name="model">coworking.booking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">coworking_management.report_booking_template</field>
        <field name="binding_model_id" ref="model_coworking_booking"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_booking_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page text-center">
                        <h2>Booking Confirmation</h2>
                        <hr/>
                        <div class="row mt32 mb32">
                            <div class="col-6"><strong>Reference:</strong> <p t-field="o.name"/></div>
                            <div class="col-6"><strong>Client:</strong> <p t-field="o.partner_id.name"/></div>
                        </div>
                        <table class="table table-sm o_main_table">
                            <thead><tr><th>Room</th><th>Start Date</th><th>End Date</th></tr></thead>
                            <tbody>
                                <tr>
                                    <td><span t-field="o.room_id.name"/></td>
                                    <td><span t-field="o.start_date"/></td>
                                    <td><span t-field="o.end_date"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
